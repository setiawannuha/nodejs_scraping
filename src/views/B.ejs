<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head.ejs') %>
    <link rel="stylesheet" href="/assets/css/student.css" />
  </head>
  <body>
    <div class="container">
      <div class="card">
        <div class="card-body">
          <h1>
            <a href="/" class="btn btn-primary"
              ><i class="fa fa-arrow-left"></i
            ></a>
            Data Siswa B
          </h1>
          <table class="table">
            <thead>
              <tr>
                <th>No.</th>
                <th>Nama</th>
                <th>Tempat Lahir</th>
                <th>Alamat</th>
                <th>Jenis Kelamin</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((item, index) => { %>
              <tr>
                <td><%= index+1 %>.</td>
                <td><%= item.nama %></td>
                <td><%= item.tempatLahir %></td>
                <td><%= item.alamat %></td>
                <td><%= item.jenisKelamin %></td>
                <td>
                  <a href="/detail/<%= item.nomorTes %>" class="btn btn-link"
                    >Detail</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
